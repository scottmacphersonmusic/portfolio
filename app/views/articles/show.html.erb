<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p id="author">
  <b>By:</b>
  <%= @article.author.email %>
</p>

<p id="status">
  <b>Status:</b>
  <%= @article.published? ? "Published" : "Unpublished" %>
</p>

<% if policy(@article).update? %>
  <%= link_to 'Edit', edit_article_path(@article),
      class: "button radius small" %>
<% end %>

<%= link_to 'Back', articles_path, class: "button radius small" %>

<% if policy(@article).destroy? %>
  <%= link_to 'Destroy', article_path, class: "button radius small",
      method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<hr/>

<h3> Comments </h3>

<br/>

<%= link_to "New Comment", new_article_comment_path(@article),
    class: "button radius small"%>

<br/><br/>

<ul>
  <% policy_scope(@comments).each do |comment| %>
    <li><%= comment.commenter_name %> |
    <%= comment.commenter_email %>
    <% if comment.commenter_url %>
      | <%= link_to comment.commenter_url, comment.commenter_url
            %>
    <% end %>
    </li>
    <% if current_user && current_user.editor? %>
      <li>Approved: <%= comment.approved %></li>
    <% end %>
    <p><%= comment.content %></p>
    <hr/>
  <% end %>
</ul>
